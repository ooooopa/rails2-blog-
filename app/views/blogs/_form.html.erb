<%= form_with(model:@blog, local:true, url:choose_new_or_edit) do |form| %>
    <% if @blog.errors.any? %>
        <div>
            <h2><%= @blog.errors.count %>件のエラーがあります。</h2>

            <ul>
                <% @blog.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>    
        
        
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    
    <div>
        <%= form.label :content %>
        <%= form.text_field :content %>
    </div>
    <%= form.submit %>

<% end %>